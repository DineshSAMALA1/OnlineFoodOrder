@model OnlineFoodOrder.Models.OrderList

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Place Your Order</title>
</head>
<body>

    <h2>Place your order</h2>

    <form method="post" action="OrderAdd">
        <table>
            @for (int i = 0; i < Model.Ord.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => Model.Ord[i].OrdersId)
                        @Html.HiddenFor(m => Model.Ord[i].OrdersName)
                        @Html.CheckBoxFor(m => Model.Ord[i].IsCheck)
                        @Model.Ord[i].OrdersName
                    </td>
                </tr>
            }
        </table>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </form>

    <p>@ViewBag.OrderItem</p>

</body>
</html>
