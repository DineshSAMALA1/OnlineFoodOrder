@model List<OnlineFoodOrder.Models.Domain.Restaurant>

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Food Items</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        body {
            background-color: black;
            color: white; /* Set text color to white for better visibility on a black background */
            margin: 0; /* Remove default margin */
            padding: 0; /* Remove default padding */
        }
    </style>

   
</head>
<body>

<div class="container">
        <h2>  <a class="btn btn-link" asp-area="" asp-controller="Restaurant" asp-action="RestaurantAdd" id="RegisterR">RestaurantRegister ++</a></h2>
        
  <h2>Food Items</h2>  
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
                    <img src="~/Images/RestaurantImage.jpg" asp-append-version="true" alt="Images restaurant" style="width:120%;">
                    <div class="carousel-caption">
                        <h1>Vegetables</h1>
                        <i>Some bunny loves veggies!</i>
                    </div>
      </div>

      <div class="item">
                    <img src="~/Images/newRestaurant.jpg" asp-append-version="true" alt="Images Restaurant" style="width:120%;">
                    <div class="carousel-caption">
                        <h1>Beverages</h1>
                        <i>Sipping on Coca Cola, living the good life.</i>

                    </div>
      </div>
    
      <div class="item">
                    <img src="~/Images/Salads.png" alt="Restaurant" style="width:120%;">
                    <div class="carousel-caption">
                        <h2>Salads</h2>
                        <i>A colorful medley of flavors and nutrients in every bite.</i>
                    </div>
      </div>

    </div>
    


    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

    <table class="table" style="color:ghostwhite;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Restaurant Name</th>
                <th>Address</th>
                <th>Landmark</th>
                <th>City</th>
                <th>State</th>
                <th>PostalCode</th>
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var restaurant in Model)
            {
                <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.RestaurantName</td>
                <td>@restaurant.Address</td>
                <td>@restaurant.Landmark</td>
                <td>@restaurant.City</td>
                <td>@restaurant.State</td>
                <td>@restaurant.PostalCode</td>
                <td>@restaurant.Country</td>
                    <td><a class="btn btn-link" asp-area="" asp-controller="Customer" asp-action="CustomerAdd" id="RegisterR">Order</a></td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

