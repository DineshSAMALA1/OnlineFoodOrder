@model OnlineFoodOrder.Models.AddCustomerView

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Registration</title>

    <script>
        function redirectToOrderAdd() {

            window.location.href = "/Order/OrderAdd";
        }

        function showSuccessMessage() {
            alert('Customer details saved successfully!');
            redirectToOrderAdd();
        }
    </script>
</head>
<body>

    <h1>Thanks for Ordering. Before ordering, Please Enter communication details.</h1>
    <form method="post" action="CustomerAdd">
        <div class="mb-2">
            Name: <input type="text" class="form-control" name="name">
        </div>
        <div class="mb-2">
            Phone: <input type="text" class="form-control" name="phone">
        </div>
        <div class="mb-2">
            Email: <input type="text" class="form-control" name="email">
        </div>
        <div class="mb-2">
            Address: <textarea class="form-control" name="address"></textarea>
        </div>
        <button type="button" class="btn btn-primary" onclick="showSuccessMessage()">Save & Select Orders</button>
    </form>

</body>
</html>
